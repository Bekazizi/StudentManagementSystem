<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Butun ekran orqa fondi -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fon"
            android:scaleType="centerCrop"
            android:contentDescription="@string/background_desc"
            android:alpha="0.8"/>

        <!-- Asosiy kontent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header rasm (ustki alohida rasm) -->
            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/nsfu"
                android:contentDescription="@string/header_image_desc"
                android:layout_marginBottom="24dp"/>

            <!-- Add Student Button -->
            <Button
                android:id="@+id/btnAddStudent"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:text="Add Student"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/gradient_button_selector"/>

            <!-- View All Students Button -->
            <Button
                android:id="@+id/btnViewAllStudents"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="View All Students"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/gradient_button_selector"/>

            <!-- Search Students Button -->
            <Button
                android:id="@+id/btnSearchStudents"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="Search Students"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/gradient_button_selector"/>

        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>