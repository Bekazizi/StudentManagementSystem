<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state (bosilganda) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="45"
                android:startColor="#FF4B2B"
            android:endColor="#0D47A1"
            android:type="linear" />
            <stroke
                android:width="2dp"
                android:color="#1565C0"/>
        </shape>
    </item>

    <!-- Default state (oddiy holatda) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:angle="45"
                android:startColor="#2196F3"
            android:endColor="#FF4B2B"
            android:type="linear" />
            <stroke
                android:width="2dp"
                android:color="#1E88E5"/>
        </shape>
    </item>
</selector>